# Example Terraform variables - copy to terraform.tfvars and customize

aws_region      = "us-east-1"
project_name    = "fraud-detection"
environment     = "dev"
owner_email     = "your-email@example.com"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

# Security
allowed_ssh_cidr = ["YOUR_IP/32"]  # Replace with your IP

# EC2 Configuration
ec2_instance_type = "t3.medium"

# High Availability
enable_multi_az = false  # Set to true for production

# Security Features
enable_waf = false  # Set to true for production

# Bedrock Model (Nova Lite with prompt engineering)
bedrock_model_id = "amazon.nova-lite-v1:0"

# Fraud Detection
fraud_threshold = 0.8
