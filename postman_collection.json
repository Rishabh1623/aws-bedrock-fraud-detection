{
  "info": {
    "name": "Fraud Detection API",
    "description": "Test collection for AWS Bedrock fraud detection system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "alb_dns",
      "value": "your-alb-dns.us-east-1.elb.amazonaws.com",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://{{alb_dns}}/health",
          "protocol": "http",
          "host": ["{{alb_dns}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Test 1: Normal Transaction (LOW Risk)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"transaction\": {\n    \"transaction_id\": \"TEST001\",\n    \"amount\": 45.99,\n    \"merchant\": \"Amazon\",\n    \"location\": \"New York\",\n    \"card_present\": true,\n    \"recent_transaction_count\": 2\n  }\n}"
        },
        "url": {
          "raw": "http://{{alb_dns}}/score",
          "protocol": "http",
          "host": ["{{alb_dns}}"],
          "path": ["score"]
        }
      }
    },
    {
      "name": "Test 2: Medium Risk Transaction",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"transaction\": {\n    \"transaction_id\": \"TEST002\",\n    \"amount\": 500.00,\n    \"merchant\": \"Electronics Store\",\n    \"location\": \"California\",\n    \"card_present\": false,\n    \"recent_transaction_count\": 5\n  }\n}"
        },
        "url": {
          "raw": "http://{{alb_dns}}/score",
          "protocol": "http",
          "host": ["{{alb_dns}}"],
          "path": ["score"]
        }
      }
    },
    {
      "name": "Test 3: High Risk Transaction",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"transaction\": {\n    \"transaction_id\": \"TEST003\",\n    \"amount\": 2500.00,\n    \"merchant\": \"UNKNOWN_MERCHANT\",\n    \"location\": \"Foreign Country\",\n    \"card_present\": false,\n    \"recent_transaction_count\": 15\n  }\n}"
        },
        "url": {
          "raw": "http://{{alb_dns}}/score",
          "protocol": "http",
          "host": ["{{alb_dns}}"],
          "path": ["score"]
        }
      }
    },
    {
      "name": "Test 4: Extreme Risk Transaction",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"transaction\": {\n    \"transaction_id\": \"TEST004\",\n    \"amount\": 9999.99,\n    \"merchant\": \"CRYPTO_EXCHANGE\",\n    \"location\": \"Unknown\",\n    \"card_present\": false,\n    \"recent_transaction_count\": 25\n  }\n}"
        },
        "url": {
          "raw": "http://{{alb_dns}}/score",
          "protocol": "http",
          "host": ["{{alb_dns}}"],
          "path": ["score"]
        }
      }
    },
    {
      "name": "Get Metrics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://{{alb_dns}}/metrics",
          "protocol": "http",
          "host": ["{{alb_dns}}"],
          "path": ["metrics"]
        }
      }
    }
  ]
}
